<header>
  <% if logged_in? %>
    <nav class="navbar navbar-expand">
    <a class="navbar-brand" href="/">UsedClothingNet</a>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav mr-auto">
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to 'ユーザー検索', search_users_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to '新規投稿', new_photo_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to 'ログアウト', logout_path, class: 'nav-link' , method: :delete %></li>
        <li class="nav-item nav-img">
          <% if current_user.image? %>
            <div id="icon">
              <%= link_to image_tag(current_user.image.url, width: '50'), user_path(current_user) %>
            </div>
          <% else %>
            <div id="icon">
              <%= link_to image_tag("default.png", width: '50', alt: "サンプル画像"), user_path(current_user) %>
            </div>
          <% end %>
        </li>
      </ul>
    </nav>
  <% else %>
    <nav class="navbar navbar-expand">
      <a class="navbar-brand" href="/">UsedClothingNet</a>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav mr-auto">
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'サインアップ', signup_path, class: 'nav-link' %></li>
        </ul>
      </div>
    </nav>
  <% end %>
</header>


  