<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <h1>ユーザーを探そう！</h1>
    <%= form_with url: search_users_path, method: :get, local: true do |f| %>
      <%= f.text_field :name,class: 'form-control' %>
      <%= f.submit :検索, class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
    <table>
      <tbody>
        <% @users.each do |user| %>
          <div class="row">
          <div class="col-sm-4">
          </div>
          <div class="col-sm-4">
            <div class="card">
              <div class="card-body">
                <div class="user_small">
                  <% if user.image? %>
                    <img src='<%= user.image.url %>' class="icon" alt="ユーザーアイコン">
                  <% else %>
                    <image src="/assets/default.png" class="icon" alt="ユーザーアイコン" %>
                  <% end %>
                    <div id="username">
                      <p>@<%= link_to user.name, user_path(user) %></p>
                    </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
          </div>
        </div>
        <% end %>
      </tbody>
    </table>